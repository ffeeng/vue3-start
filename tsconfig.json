{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2015", "es2016", "es2017", "ES2022", "dom"],
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": true,
    "noImplicitAny": false,
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "test/**", "node_modules"]
}
